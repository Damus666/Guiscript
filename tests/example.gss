.fill_x:: {
    stack.fill_x true;
}

.turn_red {
    % bg.color (25, 25, 25), 200;
}

.turn_red:press {
    % bg.color purple, 200;
}

.turn_red:hover {
    % bg.color red, 300;
}

.richtext:: {
    text.rich true;
}

.changing:: {
    text.rich true;
}

.changing {
    text.text 'silly default text';
}

.changing:press {
    text.text 'silly little pressing uwu';
}

.changing:hover {
    text.text 'silly hovering';
}

.imgtest:: {
    image.image 'builtin.1x1';
    image.fill_color red;
    image.alpha 50;
}

.cursor:: {
    text.cursor_enabled true;
}
